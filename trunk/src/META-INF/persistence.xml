<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="schoolmanagementPU" transaction-type="RESOURCE_LOCAL">
    <provider>oracle.toplink.essentials.PersistenceProvider</provider>
    <class>schoolmanagement.entity.SmRing</class>
    <class>schoolmanagement.entity.SmDay</class>
    <class>schoolmanagement.entity.SmRole</class>
    <class>schoolmanagement.entity.SmClass</class>
    <class>schoolmanagement.entity.SmSubject</class>
    <class>schoolmanagement.entity.SmClassroom</class>
    <class>schoolmanagement.entity.SmPerson2class</class>
    <class>schoolmanagement.entity.SmMessage</class>
    <class>schoolmanagement.entity.SmNote</class>
    <class>schoolmanagement.entity.SmUser</class>
    <class>schoolmanagement.entity.SmSchedule</class>
    <class>schoolmanagement.entity.SmPersonNotes</class>
    <class>schoolmanagement.entity.SmTeacher</class>
    <class>schoolmanagement.entity.SmPerson</class>
    <properties>
      <property name="toplink.jdbc.user" value="root"/>
      <property name="toplink.jdbc.password" value=""/>
      <property name="toplink.jdbc.url" value="jdbc:mysql://localhost/schoolmanagement"/>
      <property name="toplink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
    </properties>
  </persistence-unit>
</persistence>
